<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CategoryDownStyle">
        <item name="android:layout_width">150sp</item>
        <item name="android:layout_height">150sp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorCategoryText</item>
        <item name="android:background">@color/colorCatagoryDownBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10sp</item>
    </style>

    <style name="CategoryUpStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorCategoryText</item>
        <item name="android:background">@color/colorCategoryUpBackground</item>
        <item name="android:textSize">45sp</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:gravity">center</item>

    </style>
</resources>